<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="@android:style/Theme.Holo.Light">
        <item name="android:actionBarStyle">@style/action_bar</item>
        <item name="textAllCaps">false</item>
    </style>
    <style name="action_bar" parent="@android:style/Widget.Holo.Light.ActionBar">
        <item name="android:titleTextStyle">@style/title_bar</item>
        <item name="android:background">@color/main</item>
        <item name="android:logo">@color/main</item>
    </style>

    <style name="title_bar" parent="@style/TextAppearance.AppCompat.Widget.ActionBar.Title">
        <item name="android:textColor">@color/white</item>
    </style>


</resources>
